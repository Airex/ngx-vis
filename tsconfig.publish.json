{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": false,
    "noImplicitAny": true,
    "declaration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": ["dom", "es6"],
    "types": [
      "jasmine",
      "webpack"
    ],
    "typeRoots": [
      "./typings"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "files": [
    "./typings/globals/vs/index.d.ts",
    "./demo/custom-typings.d.ts",
    "./ng2-vis.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "factories"
  }
}
